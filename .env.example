# Kopia Backup Stack - Environment Variables
# Bu dosyayı .env olarak kaydedin ve değerleri düzenleyin

# ==============================================
# KOPIA AYARLARI
# ==============================================
KOPIA_PASSWORD=changeme123
KOPIA_PORT=51515

# ==============================================
# POSTGRESQL BAĞLANTI BİLGİLERİ
# ==============================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=your_database_name
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_NETWORK=arsiv-server-app_default_network

# ==============================================
# YEDEKLEME AYARLARI
# ==============================================
BACKUP_RETENTION_DAYS=7

# ==============================================
# DOCKER VOLUME YOLLARI
# ==============================================
POSTGRES_VOLUME_PATH=/var/lib/docker/volumes/your_postgres_volume/_data
MINIO_VOLUME_PATH=/var/lib/docker/volumes/your_minio_volume/_data

# ==============================================
# SSH KEY DİZİNİ
# ==============================================
SSH_KEYS_PATH=./ssh-keys

# ==============================================
# ZAMAN DİLİMİ
# ==============================================
TZ=Europe/Istanbul
